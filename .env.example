# Telegram Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# PostgreSQL Database Configuration
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://bot_user:your_secure_password_here@localhost:5432/cover_letter_bot

# Or use separate variables (for docker-compose)
POSTGRES_DB=cover_letter_bot
POSTGRES_USER=bot_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# HH.ru OAuth Configuration (получить на https://dev.hh.ru/)
HH_CLIENT_ID=your_hh_client_id_here
HH_CLIENT_SECRET=your_hh_client_secret_here
HH_REDIRECT_URI=https://your-domain.com/hh/callback

# OAuth Webhook Server
WEBHOOK_PORT=8080
